{
    "browser_specific_settings": {
        "gecko": {
            "id": "thunderbirdaccountcopy@ucf.edu",
            "strict_min_version": "102"
        }
    },
    "manifest_version": 2,
    "name": "Account Copy",
    "version": "1.0",
    "author": "Lasana Murray",
    "homepage_url": "https://github.com/metasansana/thunderbird-account-copy",
    "description": "A Thunderbird extension for copying data between mail accounts.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png"
    },
    "action": {
        "default_icon": "icons/icon64.png",
        "default_title": "Thunderbird Account Copy"
    },
    "browser_action": {
        "default_icon": "icons/icon64.png",
        "default_title": "Thunderbird Account Copy"
    },
    "background": {
        "page": "background/index.html"
    },
    "experiment_apis": {
        "MessageFilters": {
            "schema": "api/MessageFilters/schema.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["MessageFilters"]],
                "script": "api/MessageFilters/implementation.js"
            }
        }
    },
    "permissions": [
        "tabs",
        "accountsRead",
        "accountsFolders",
        "messagesRead",
        "messagesMove"
    ]
}
